<Window x:Class="TcpExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="TCP Simulator" Height="520" Width="860">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <GroupBox Header="接続設定" Padding="10" Margin="0 0 0 10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="220" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="IP アドレス" VerticalAlignment="Center" />
                <TextBox Grid.Column="1" Width="160" Margin="8 0"
                         Text="{Binding EndpointIp, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Column="2" Text="ポート" VerticalAlignment="Center" Margin="10 0 0 0" />
                <TextBox Grid.Column="3" Width="80" Margin="8 0"
                         Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}" />

                <CheckBox Grid.Column="4" Content="自動応答を有効化"
                          IsChecked="{Binding AutoResponseEnabled, Mode=TwoWay}" Margin="12 0 0 0"
                          VerticalAlignment="Center" />
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="1" Header="自動応答ルール" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <DataGrid Grid.Row="0"
                          ItemsSource="{Binding AutoResponses}"
                          SelectedItem="{Binding SelectedRule, Mode=TwoWay}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          Margin="0 0 0 8"
                          IsReadOnly="False">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Binding="{Binding Enabled, Mode=TwoWay}" Header="有効" Width="60" />
                        <DataGridTextColumn Binding="{Binding Priority, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Header="優先度" Width="70" />
                        <DataGridTextColumn Binding="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Header="名前" Width="120" />
                        <DataGridTextColumn Binding="{Binding Pattern, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Header="マッチ条件" Width="*" />
                        <DataGridTextColumn Binding="{Binding Response, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Header="応答" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="追加" Width="80" Margin="0 0 8 0" Command="{Binding AddRuleCommand}" />
                    <Button Content="削除" Width="80" Command="{Binding RemoveRuleCommand}" />
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
